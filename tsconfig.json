{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "typedocOptions": {
    "entryPoints": [
      "src/module.ts"
    ],
    "out": "docs",
    "readme": "./README.md"
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "extends": "./node_modules/gts/tsconfig-google.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
